#for
	padding: 50px 0
	background-color: #E9E5E3
	background-image url(../img/backgrounds/for_bg.png)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
.for-container
	border-radius: 35px;
	box-shadow: 0px 4px 37.2px 2.8px rgba(40, 42, 82, 0.56);
	background-color: rgba(#fff,.9)
	padding 33px 40px
	background-image url(../img/icons/i.png)
	background-repeat no-repeat
	background-position: left 30px top 30px
	margin-bottom: 30px
.for-container-list
	li
		list-style none
		color #110d4a
		padding-left: 20px
		position relative
		line-height: 27px
		margin-bottom: 5px
		&:last-child
			margin-bottom: 0
		&:before
			content '-'
			display block
			position: absolute
			left 0
			top 0
	&:first-of-type
		margin 0 0 50px 150px