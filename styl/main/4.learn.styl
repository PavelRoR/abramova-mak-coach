#learn
	padding 50px 0
	background-color: #AABFC7
.learn
	padding 60px 90px
	background-color: rgba(#fff,.7)
	border-radius: 35px
	border: 3px solid #1a4e84
	box-shadow: 0px 4px 37.2px 2.8px rgba(40, 42, 82, 0.56);
	background-image url(../img/icons/i.png)
	background-repeat no-repeat
	background-position: left 60px top 50px
	margin-bottom: 30px
	&-subtitle
		margin-bottom: 20px
		text-decoration: underline
		font-family: Mu
		font-size: 18px
	&-list
		li
			list-style none
			padding-left: 20px
			position relative
			line-height: 27px
			margin-bottom: 5px
			&:last-child
				margin-bottom: 0
			&:before
				content '-'
				display block
				position: absolute
				left 0
				top 0
			&:last-child
				margin-bottom: 0
.learn-contianer
	margin 0 0 40px 150px
	&-title
		font-size: 18px
	&-text
		line-height: 27px
.general-title-learn
	margin-top: 100px