@media screen and (min-width 2295px)
	body
		font-size: 19px
	.container
		width 1400px
	.main-date
		right -50px
	.lesson
		max-width 420px
	.module-title
	.learn-contianer-title
	.learn-subtitle
		font-size: 20px
	.learn-contianer
		margin-bottom: 70px
	.packet-body
		min-height 495px
	.coach-list
		max-width 800px
	.coach-img
		right 50px
	.coach-img-2
		left 50px
	#coaches
		padding-bottom:  240px
@media screen and (max-width 1199px)
	header
		padding 15px 0
	#logo
		display block
		float: none
		margin 0 auto 5px
	.contacts
		text-align: center
		float: none
	.contact
		display: inline-block
		margin 5px 5px 0
	.main-date
		bottom -150px
	.module
	.module:nth-of-type(2n)
		float: none
	.lesson
		min-height 472px
		text-align: center
	.lesson-title
		line-height: 50px
	.coach-img
		right -125px
	.coach-img-2
		left -125px
@media screen and (max-width 991px)
	#main
		padding-bottom: 50px
	.main-title
		font-size: 50px
		&:after
			margin-bottom: 30px
	.main-date
	.main-authors
		display: none
	.module:nth-of-type(2n)
		padding-right: 180px
		background-position: right 20px center
	.lesson
		min-height 400px
	.learn
		padding 40px 60px
		background-position: left 40px top 30px
	.general-title-learn
		margin-top: 50px
	#coaches
		padding-bottom: 50px
	.coach-img
		position: static
		display: block
		width 100%
		max-width 320px
		height auto
		margin 0 auto 20px
	.coach-list
		max-width 100%
	.coach-name
	.coach-2 .coach-name
		padding 0 0 20px
		text-align: center
	.coach:first-of-type
		margin-bottom: 50px
@media screen and (max-width 767px)
	.main-title
		font-size: 40px
	.lesson
	.packet-body
		min-height 1px
	.learn
		padding 30px 35px
		&-contianer
			margin-left: 170px
	.packet-1
		margin-bottom: 30px
	.prepayment
	.timer
		max-width 430px
	#video-revs
		max-width 100%
		margin-bottom: 70px
	.owl-theme .owl-nav
		top auto
		bottom: 20px
	.owl-prev
		left 0
	.owl-next
		right: 0
@media screen and (max-width 600px)
	.main-title
		font-size: 32px
	.for-container
	.module
	.module:nth-of-type(2n)
	.learn
		padding 130px 20px 20px
		background-position: top 20px center
		background-size: 90px
	.for-container-list:first-of-type
		margin 0 0 5px
	.module
		text-align: center
	.lesson
		padding 20px 20px 30px
		&-title
			font-size: 32px
			line-height: 1.2
			margin-bottom: 10px
	.learn-contianer
		margin 0 0 25px
	.timer-title
		font-size: 26px
		line-height: 1.2
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 30px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
@media screen and (max-width 485px)
	#main
		padding-bottom: 40px
	#logo
		width 160px
		height 15px
	.contact
		font-size: 12px
		line-height: 14px
		padding-left: 18px
		&-email
			padding-left: 22px
	.main-title
		font-size: 26px
		margin: 30px 0 20px
		&:after
			margin 20px auto
	.main-info:last-of-type
		margin-bottom: 30px
	#for
	#coach-plan
	#business-plan
	#learn
	#prices
	#coaches
	#revs
		padding 40px 0
	.general-title
		font-size: 26px
	.coach-name
		font-size: 24px
	.coach-list
	.timer
	.prepayment
		padding 20px

	#video-revs
		margin-bottom: 50px
	footer
		padding 15px 0
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
	footer #conditions, footer p
		font-size: 12px
@media screen and (max-width 385px)
	#main
		padding-bottom: 30px
	#for
	#coach-plan
	#business-plan
	#learn
	#prices
	#coaches
	#revs
		padding 30px 0
	.main-title
		font-size: 20px
	.main-info:last-of-type
		margin-bottom: 20px
	.button
		font-size: initial
		height: 60px;
		line-height: 60px;
	.general-title
		font-size: 24px
		margin-bottom: 20px
	.general-subtitle
		font-size: 18px
	.lesson-title
		font-size: 28px
	.packet
		padding 180px 20px 20px
	.timer-title
		font-size: 22px