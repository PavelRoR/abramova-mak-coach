#prices
	padding 50px 0
	background-color: #47555A
	background-image url(../img/backgrounds/prices_bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.packets
	width 100%
	max-width 770px
	margin 0 auto
.packet
	max-width 430px
	margin 0 auto
	background-color: rgba(#fff,.9)
	border-radius: 35px
	padding 200px 45px 20px
	background-repeat no-repeat
	background-position: center top 30px
	&-1
		background-image url(../img/images/packet_img_1.png)
	&-2
		background-image url(../img/images/packet_img_2.png)
	&-head-title
		text-transform: uppercase
		text-align: center
		font-size: 20px
		color: #110d4a
		margin-bottom: 30px
	&-body-list
		li
			list-style: none
			padding-left 40px
			margin-bottom: 10px
			background-image url(../img/icons/check.png)
			background-repeat no-repeat
			background-position: left top
			background-size 28px
			min-height 32px
.cost
	text-align: center
	margin 20px 0 25px
	color #ed1c24
	font-size: 30px