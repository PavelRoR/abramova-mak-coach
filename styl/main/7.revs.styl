#revs
	padding 50px 0
	background-color: #EBE5E0
	background-image url(../img/backgrounds/revs_bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
#video-revs
	width 100%
	max-width 90%
	margin 0 auto 30px
	position relative
.owl-theme .owl-dots .owl-dot span
	background: #740364
.owl-theme .owl-dots .owl-dot.active span, .owl-theme .owl-dots .owl-dot:hover span
	background: #508DDF
.owl-theme .owl-nav
	position: absolute
	width 100%
	height 0
	top calc(50% - 45px)
.owl-theme .owl-nav [class*="owl-"]
	border-radius: 35px
	width 45px
	font-size: 45px
	line-height: 40px
	background-color: #740364
	position: absolute
	&:hover
		background-color: #508DDF
.owl-prev
	left -60px
.owl-next
	right -60px