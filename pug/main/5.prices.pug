-var cost_1 = '390 000руб.';
-var cost_2 = '590 000руб.';

-var sale_1 = '40 000руб.';
-var sale_2 = '100 000руб.';

-var today_1 = '350 000руб.';
-var today_2 = '490 000руб.';

-var link_1 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=3984&clean=true&lg=ru';
-var link_2 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=3987&clean=true&lg=ru';

-var prep = '10 000р.'
-var prep_link = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=3990&clean=true&lg=ru'

section#prices
	.container
		+gt('general-title-light','выбрать свой пакет участия')
		.packets
			.row
				.col-md-6.col-sm-6
					.packet.packet-1
						.packet-head
							h4.packet-head-title пакет "стандарт"
						.packet-body
							ul.packet-body-list
								li тренерская часть - 12 модулей
								li бизнес-часть - 12 занятий и 15 онлайн-вебинаров
								li обратная связь
								li практическая отработка навыков
						.packet-footer
							h4.cost.cost-full Стоимость:
								span=cost_1
							h4.cost.cost-sale Скидка:
								span#sale-1=sale_1
							h4.cost.cost-today Стоимость сегодня:
								span#today-1=today_1
							+b('button-cost',link_1,'_blank','Выбрать','link-1')
				.col-md-6.col-sm-6
					.packet.packet-2
						.packet-head
							h4.packet-head-title пакет "вип"
						.packet-body
							ul.packet-body-list
								li весь материал пакета "Стандарт"
								li авторская игра МАК «Деньги женщинам»
								li колода карт по работе с родовой системой
								li обучение авторской игре и по работе с родовой системой через МАК
								li 5 видеосъемок на любом канале ТВ
								li бонусы
								li конкурс среди лучших студентов
								li тренерство в МasterVision
						.packet-footer
							h4.cost.cost-full Стоимость:
								span=cost_2
							h4.cost.cost-sale Скидка:
								span#sale-2=sale_2
							h4.cost.cost-today Стоимость сегодня:
								span#today-2=today_2
							+b('button-cost',link_2,'_blank','Выбрать','link-2')
			.prepayment
				h4.prepayment-title= 'Внести предоплату ' 
					span= prep
				a.button.prepayment-button(href= prep_link target="-blank")#prepayment-link= 'Оплатить ' + prep
			.timer
				h4.timer-title= 'Скидка уменьшится через:'
				.clock